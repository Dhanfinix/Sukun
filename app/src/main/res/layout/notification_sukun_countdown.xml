<?xml version="1.0" encoding="utf-8"?>
<!--
    Sukun notification custom view — must be RemoteViews safe.
    No custom colors, no alpha on Views (unreliable in RemoteViews).
    Layout: left column (headline + prayer name), right column (large countdown).
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:minHeight="48dp">

    <!-- Countdown — anchored end, vertically centered to parent -->
    <Chronometer
        android:id="@+id/notification_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:countDown="true"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:textStyle="bold"
        android:fontFamily="monospace" />

    <!-- Left text column — takes remaining space, centered vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/notification_chronometer"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your phone is silenced"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Fajr"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Line2"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</RelativeLayout>
